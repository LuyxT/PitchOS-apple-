{
  "name": "pitchinsights-backend",
  "version": "1.0.0",
  "private": true,
  "description": "PitchInsights production backend",
  "license": "UNLICENSED",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "npm run prisma:generate && nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node scripts/start-prod.js",
    "lint": "eslint \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "db:migrate:deploy": "node scripts/run-with-db-url.js prisma migrate deploy",
    "db:migrate:dev": "node scripts/run-with-db-url.js prisma migrate dev",
    "db:migrate:status": "node scripts/run-with-db-url.js prisma migrate status",
    "smoke": "tsx scripts/smoke.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.20",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.4.20",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.6.1",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "prisma": "^5.22.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.23",
    "@types/node": "^20.17.57",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
